<table class="table">
    <thead>
        <tr>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
        <% if (data.length === 0) { %>
            <tr>
                <td colspan="3">No hay datos</td>
            </tr>
        <% }else{ %>
        
        <% for (let i = 0; i < data.length; i++) { %>
            <tr>
                <td><%= data[i].title %></td>
                <td><%= data[i].price %></td>
                <td><%= data[i].thumbnail %></td>
            </tr>
        <% } } %>
    </tbody>
</table>